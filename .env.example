# 应用配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=8000

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# 知识库配置
KNOWLEDGE_API_URL=http://localhost:8000/api/knowledge_search
KNOWLEDGE_API_KEY=your_knowledge_api_key

# LightRAG配置
LIGHTRAG_API_URL=http://localhost:8001/api/lightrag
LIGHTRAG_API_KEY=your_lightrag_api_key

# 搜索引擎配置
SEARCH_ENGINE_API_KEY=your_search_api_key
SEARCH_ENGINE_URL=https://api.search.com

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=



# 日志配置
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# 性能配置
MAX_WORKERS=10
REQUEST_TIMEOUT=30
STREAM_CHUNK_SIZE=1024
